generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER 
}

model SteamUser {
  id                 Int      @id @default(autoincrement())

  steamId            String   @unique
  username           String
  profileurl         String
  avatar             String
  avatarmedium       String
  avatarfull         String
  avatarhash         String
  lastlogoff         Int
  personastate       Int
  primaryclanid      String
  timecreated        Int
  personastateflags  Int
  displayName        String

  role               Role     @default(USER)
  createdAt          DateTime @default(now())
}
