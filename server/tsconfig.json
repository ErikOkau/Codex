{
  "extends": "../.nuxt/tsconfig.server.json",
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node", "ts-node"],
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
